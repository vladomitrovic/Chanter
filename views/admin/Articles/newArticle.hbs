
    {{#if article}}
    <form action="/admin/articles/modify/{{article.id}}" method="post">
        {{else}}
    <form action="/admin/articles/add" method="post">
    {{/if}}
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<div class="w3-bar w3-grey">
    <button class="w3-bar-item w3-button" onclick="openTab('fr')">Français</button>
    <button class="w3-bar-item w3-button" onclick="openTab('de')">Deutsch</button>
</div>
<br>

<div id="fr" class="w3-container city">
    <div class="form-group">
        <input required="true" type="text" class="form-control" name="titleFR" value="{{article.titleFR}}" placeholder="Titre" autofocus><br>
    </div>
    <div class="form-group">
        <select id="selectFR" required="true" class="form-control" name="categorie">
            <option selected disabled>Catégorie...</option>
            {{#each category}}
                <option id="{{this.id}}">{{this.categoryFR}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <textarea class="form-control" rows="2" name="chapeauFR" required="true"  placeholder="Chapeau">{{article.chapeauFR}}</textarea>
    </div>
    <div class="form-group">
        <textarea required="true" class="form-control" rows="8" name="textFR"  placeholder="Texte">{{article.textFR}}</textarea>
    </div>
</div>

<div id="de" class="w3-container city" style="display:none">
    <div class="form-group">
        <input required="true" type="text" class="form-control" name="titleDE" value="{{article.titleDE}}" placeholder="Titel" autofocus><br>
    </div>
    <div class="form-group">
        <select id="selectDE" required="true" class="form-control" name="categorie">
            <option selected disabled>{{langs.categorie}}...</option>
            {{#each category}}
                <option id="{{this.id}}">{{this.categoryDE}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <textarea class="form-control" rows="2" name="chapeauDE" required="true" placeholder="Chapeau en allemend">{{article.chapeauDE}}</textarea>
    </div>
    <div class="form-group">
        <textarea required="true" class="form-control" rows="8" name="textDE"  placeholder="Text">{{article.textDE}}</textarea>
    </div>
</div>


    <div class="form-group">
        <label for="file">{{langs.image}}</label>
        <input type="file"  name="myFile">
    </div>
    <button type="submit" class="btn btn-primary">{{langs.save}}</button>
</form>



<script>

    $( document ).ready(function() {
        $("select[id=selectFR] option[id=" + {{{article.CategoryId}}} + "]").attr("selected", "selected");
        $("select[id=selectDE] option[id=" + {{{article.CategoryId}}} + "]").attr("selected", "selected");

    });

    function openTab(tab) {
        console.log('open tab');
        var i;
        var x = document.getElementsByClassName("city");
        for (i = 0; i < x.length; i++) {
            x[i].style.display = "none";
            console.log('open tab none');
        }
        document.getElementById(tab).style.display = "block";
        console.log('open tab end');
    }
</script>
