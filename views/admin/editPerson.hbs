                    <td><input type="radio" id="cmgscbv" name="gscbv"></td>
                    <td><input type="radio" id="mhgscbv" name="gscbv"></td>
                    <td><input type="radio" id="videgscbv" name="gscbv"></td>

                </tr>


                <tr>
                    <td>UCC</td>
                    <td><input type="radio" id="coucc" name="ucc"></td>
                    <td><input type="radio" id="cmucc" name="ucc"></td>
                    <td><input type="radio" id="mhucc" name="ucc"></td>
                    <td><input type="radio" id="videucc" name="ucc"></td>

                </tr>


                <tr>
                    <td>GCVC</td>
                    <td><input type="radio" id="cogcvc" name="gcvc"></td>
                    <td><input type="radio" id="cmgcvc" name="gcvc"></td>
                    <td><input type="radio" id="mhgcvc" name="gcvc"></td>
                    <td><input type="radio" id="videgcvc" name="gcvc"></td>

                </tr>


                <tr>
                    <td>VOG</td>
                    <td><input type="radio" id="covog" name="vog"></td>
                    <td><input type="radio" id="cmvog" name="vog"></td>
                    <td><input type="radio" id="mhvog" name="vog"></td>
                    <td><input type="radio" id="videvog" name="vog"></td>

                </tr>


                <tr>
                    <td>AVCC</td>
                    <td><input type="radio" id="cavcc" name="avcc"></td>
                    <td></td>
                    <td></td>
                    <td><input type="radio" id="videucc" name="avcc"></td>

                </tr>

                <tr>
                    <td>OCV</td>
                    <td><input type="radio" id="coocv" name="ocv"></td>
                    <td><input type="radio" id="cmocv" name="ocv"></td>
                    <td><input type="radio" id="mhocv" name="ocv"></td>
                    <td><input type="radio" id="videocv" name="ocv"></td>

                </tr>


                <tr>
                    <td>USC</td>
                    <td><input type="radio" id="cavsc" name="usc"></td>
                    <td><input type="radio" id="cmusc" name="usc"></td>
                    <td></td>
                    <td><input type="radio" id="videusc" name="usc"></td>

                </tr>

                <tr>
                    <td>Autres</td>
                    <td><input type="radio" id="caautres" name="autres"></td>
                    <td></td>
                    <td></td>
                    <td><input type="radio" id="videautres" name="autres"></td>

                </tr>

                <tr>
                    <td>Ancien</td>
                    <td class="col-xs-2" colspan="3"><input type="text" id="anciencomite" name="anciencomite"></td>


                </tr>



                </tbody>
            </table>
        </div>


    </div>


    <div class="form-group">

    </div>









<hr />



    <div class="form-group">

    </div>







    <button type="submit" class="btn btn-primary btn-lg btn-block">{{langs.register}}</button>

</form>
