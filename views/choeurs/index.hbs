<form action='/choeur/' method="post">

<div class='col-md-4'>
    <label for="inputsm">{{langs.membrefed}}</label>
    <div class="radio">
        <label><input type="radio" name="optradio" checked>{{langs.yes}}</label>
    </div>
    <div class="radio">
        <label><input type="radio" name="optradio">{{langs.no}}</label>
    </div>
    <div class="radio disabled">
        <label><input type="radio" name="optradio" disabled>{{langs.all}}</label>
    </div>
</div>

<div class='col-md-4'>
    <label for="inputsm">{{langs.regionling}}</label>
    <div class="radio">
        <label><input type="radio" name="optradio" checked>Haut-Valais</label>
    </div>
    <div class="radio">
        <label><input type="radio" name="optradio">Bas-Valais</label>
    </div>
    <div class="radio disabled">
        <label><input type="radio" name="optradio" disabled>{{langs.all}}</label>
    </div>
</div>

<div class='col-md-4'>
    <label for="inputsm">Groupement</label>
    <div class="radio">
        <label><input type="radio" name="optradio" checked>GSCBV</label>
</div>
    <div class="radio">
        <label><input type="radio" name="optradio">UCC </label>
    </div>
    <div class="radio">
        <label><input type="radio" name="optradio">GCVC </label>
    </div>
    <div class="radio">
        <label><input type="radio" name="optradio">OCV</label>
    </div>
    <div class="radio disabled">
        <label><input type="radio" name="optradio" disabled>{{langs.all}}</label>
    </div>
</div>
<div class='col-md-4'>
    <label for="inputsm">{{langs.typeChoeur}}</label>
    <div class="radio">
        <label><input type="radio" name="optradio" checked>{{langs.adultes}}</label>
    </div>
    <div class="radio">
        <label><input type="radio" name="optradio">{{langs.mixte}}</label>
    </div>
    <div class="radio disabled">
        <label><input type="radio" name="optradio" disabled>{{langs.hommes}}</label>
    </div>
    <div class="radio disabled">
        <label><input type="radio" name="optradio" disabled>{{langs.jeunes}}</label>
    </div>
    <div class="radio disabled">
        <label><input type="radio" name="optradio" disabled>{{langs.dames}}</label>
    </div>
    <div class="radio disabled">
        <label><input type="radio" name="optradio" disabled>{{langs.enfants}}</label>
    </div>
</div>

<div class='col-md-4'>
    <label for="inputsm">{{langs.president}}</label>
    <div class="form-group">
    <select class="selectpicker form-control input-sm" name="director" id="president">
        {{#each president}}
            <option>{{this}}</option>
        {{/each}}
    </select>
    </div>
</div>


<div class='col-md-4'>
    <label for="inputsm">{{langs.chefDeChoeur}}</label>
    <div class="form-group">
    <select class="selectpicker form-control input-sm" name="director" id="director">
        {{#each director}}
            <option>{{this}}</option>
        {{/each}}
    </select>
    </div>
</div>

<div class='col-md-8' style="vertical-align:bottom;">
    <br />
    <button type="submit" id="btnSubmit" style="width:100%;" name="Submit">{{langs.rechercher}}</button>
</div>
</form>