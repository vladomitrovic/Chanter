
<div class="container" >
            <div >
                <h2>{{langs.login}}</h2>
                <p>{{langs.pleaseCredentials}}</p>
            </div>
            <form action="/users/login" method="post" >

                <div class="form-group">
                    <input type="text" class="form-control" name="username" placeholder="{{langs.username}}">
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="{{langs.password}}">
                </div>
                {{#if messages.error}}
                    <p>{{messages.error}}</p>
                {{/if}}
                <button type="submit" class="btn btn-primary">{{langs.login}}</button>
            </form>
</div>




